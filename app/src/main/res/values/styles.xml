<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonContained">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">24dp</item>
    </style>
    
    <style name="ButtonText">
        <item name="android:textColor">@color/purple</item>
        <item name="backgroundTint">#00FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:resizeMode">horizontal</item>
        <item name="singleLine">true</item>
        <item name="boxStrokeColor" >@color/purple</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="editTextColor">@color/black</item>
        <item name="errorTextColor">@color/red</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="cursorColor">@color/purple</item>
        <item name="cursorErrorColor">@color/red</item>
        <item name="android:state_focused">true</item>
    </style>
    <style name="MyTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">

    </style>
</resources>